@model List<Linq2T.Models.Studiante>


<body>

    <div class="container">
        <div class="row">
            <div id="micolor" class="col-lg-8 col-sm-offset-2 jumbotron" style="margin-top: 30px">

                <button id="wea"> Mostrar</button>

                <form action="/" method="post">
                    @*<<div  class="ocultar" style="display:none;">*@
                    <div class="form-group">
                        <select class="form-control">
                            <option value="0">..::Seleccionar::..</option>
                            <option value="1">Nombre</option>
                            <option value="2">Materia</option>
                            <option value="3">Promedio</option>
                        </select>
                    </div>
                    <label class="radio-inline"><input id="Radio" type="radio" name="select" value="1" />Nombre</label>
                    <label class="radio-inline"><input id="Radio" type="radio" name="select" value="2" />Materia</label>
                    <label class="radio-inline"><input id="Radio" type="radio" name="select" value="3" />Promedio</label>

                    @*</div>*@
                    <div>
                        <input type="text" name="txtbuscar" value="" class="form-control" placeholder="Digite el nombre de la materia" autocomplete="off" />
                        <input type="submit" class="btn btn-info btn-lg" name="btn" value="Buscar" />
                    </div>
                </form>
            </div>
            <div class="col-lg-8 col-sm-offset-2 jumbotron" style="margin-top: 60px">
                <p>resultado</p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Carnet</th>
                            <th>Nombre</th>
                            <th>Materia</th>
                            <th>Promedio</th>
                            <th>estado</th>
                            <th>Fechas</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Carnet</td>
                                <td>@item.Nombre</td>
                                <td>@item.Materia</td>
                                <td>@item.Promedio</td>
                                <td>estado</td>
                                <td>@item.Fecha</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>


